//   url      = env("DATABASE_URL")
// }
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Category{
  id Int @id @default(autoincrement())
  title String
  stuffs Stuff[]
}

model Stuff{
  id Int @id @default(autoincrement())
  name String
  image String?
  approximateValue Decimal @default(0.0)
  categoryId Int
  category Category @relation(fields: [categoryId], references: [id])
}
